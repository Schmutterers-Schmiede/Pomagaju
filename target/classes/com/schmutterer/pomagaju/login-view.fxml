<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.schmutterer.pomagaju.controllers.LoginViewController">
    <center>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="250.0" spacing="15.0"
              style="-fx-background-color: #FFF633;" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" prefHeight="18.0" prefWidth="257.0" text="Pomagaju Login"/>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label text="email"/>
                        <TextField fx:id="userEmail" promptText="your email address"/>
                    </children>
                </VBox>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label text="Passwort"/>
                        <PasswordField fx:id="userPassword" promptText="your password"/>
                    </children>
                </VBox>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <left>
                        <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#onRegistrierenButtonClick"
                                text="Registrieren" BorderPane.alignment="CENTER"/>
                    </left>
                    <right>
                        <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Login"
                                BorderPane.alignment="CENTER"/>
                    </right>
                    <center>
                        <Button fx:id="btnExit" mnemonicParsing="false" onAction="#onExitButtonClick" text="Beenden"
                                BorderPane.alignment="CENTER"/>
                    </center>
                </BorderPane>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </center>
</BorderPane>
